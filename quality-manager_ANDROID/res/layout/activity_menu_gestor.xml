<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:shrinkColumns="*"
    android:stretchColumns="*" >

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/imageInstituicaoFinanciadora"
            style="@style/ImageMenuGestor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#688473"
            android:clickable="true"
            android:src="@drawable/ic_instituicao_financiadora" />

        <ImageView
            android:id="@+id/imageProgramaInstitucional"
            style="@style/ImageMenuGestor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#547360"
            android:clickable="true"
            android:src="@drawable/ic_programainstitucional" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/imageEdital"
            style="@style/ImageMenuGestor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#42634F"
            android:clickable="true"
            android:src="@drawable/ic_edital" />

        <ImageView
            android:id="@+id/imageCurso"
            style="@style/ImageMenuGestor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#335540"
            android:clickable="true"
            android:src="@drawable/ic_curso" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/imageOrientador"
            style="@style/ImageMenuGestor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2A4C37"
            android:clickable="true"
            android:src="@drawable/ic_orientador" />

        <ImageView
            android:id="@+id/imageInstituicaoBancaria"
            style="@style/ImageMenuGestor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#20432D"
            android:clickable="true"
            android:src="@drawable/ic_instituicao_financeira" />
    </TableRow>

</TableLayout>