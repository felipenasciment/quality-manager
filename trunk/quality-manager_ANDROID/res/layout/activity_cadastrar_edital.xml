<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cadastrarEditalScrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        style="@style/VerticalThemeLinearLayout">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Programa Institucional" />

        <Spinner
            android:id="@+id/spinnerProgramaInstitucional"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número do Edital" />

        <EditText
            android:id="@+id/editTextNumeroEdital"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:digits="1234567890"
            android:ems="13"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ano" />

        <EditText
            android:id="@+id/editTextAno"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:digits="1234567890"
            android:ems="13"
            android:inputType="numberDecimal" />

        <!-- Prazo das inscrições -->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prazo das Inscrições" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
		    android:weightSum="1">

            <EditText
                android:id="@+id/editTextInicioInscricoes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="#FFFFFF"
                android:inputType="date" />

            <EditText
                android:id="@+id/editTextFimInscricoes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="#FFFFFF"
                android:inputType="date" 
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <!-- Prazo relatório parcial e final -->
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prazo Relatório Inicial" />

        <EditText
            android:id="@+id/editTextPrazoRelatorioParcial"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:digits="1234567890"
            android:ems="13"
            android:inputType="date" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prazo Relatório Final" />

        <EditText
            android:id="@+id/editTextPrazoRelatorioFinal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:digits="1234567890"
            android:ems="13"
            android:inputType="date" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número de Vagas" />

        <EditText
            android:id="@+id/editTextNumeroVagas"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:digits="1234567890"
            android:ems="13"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bolsa Orientador" />

        <EditText
            android:id="@+id/editTextBolsaOrientador"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:digits="1234567890"
            android:ems="13"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bolsa dicente" />

        <EditText
            android:id="@+id/editTextBolsaDiscente"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:digits="1234567890"
            android:ems="13"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Edital" />

        <Spinner
            android:id="@+id/spinnerTipoEdital"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF" />

        <Button
            android:id="@+id/buttonCadastrarEdital"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonTheme"
            android:text="Cadastrar"/>
    </LinearLayout>

</ScrollView>