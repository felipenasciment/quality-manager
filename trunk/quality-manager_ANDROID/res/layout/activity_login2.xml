<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo_2" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nome"
        android:layout_alignLeft="@+id/nome"
        android:text="Matricula" />
    
    <EditText
        android:id="@+id/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:background="#FFFFFF"
        android:ems="13"
        android:inputType="text" />
    
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/senha"
        android:layout_alignLeft="@+id/nome"
        android:layout_marginBottom="22dp"
        android:text="Senha" />

    <EditText
        android:id="@+id/senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignRight="@+id/nome"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="111dp"
        android:background="#FFFFFF"
        android:ems="13"
        android:inputType="textPassword" />    

    <Button
        android:id="@+id/confirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/senha"
        android:layout_below="@+id/senha"
        android:layout_marginTop="21dp"
        android:background="#03AEE7"
        android:textColor="#FFFFFF"
        android:text="Login" />

    <TextView
        android:id="@+id/cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/confirmar"
        android:layout_below="@+id/confirmar"
        android:layout_marginTop="14dp"
        android:textColor="#03AEE7"
        android:onClick="onClick"
        android:clickable="true"
        android:text="Criar uma conta" />

</RelativeLayout>